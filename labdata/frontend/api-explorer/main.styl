@import '../shared/colors'

*
  box-sizing: border-box

#container
  max-width 60em
  margin 0 auto 2em

.usage
  position relative
  .toggle-json
    position absolute
    right 0
    top 0
    z-index 20

.small-card
  padding 10px
  h4,h5
    margin-top 0
    margin-bottom 0.2em
  p
    margin-bottom 0.2em

ul.arguments, ul.routes
  list-style: none
  padding-left 0
  li
    margin-bottom 0.5em
  .bp3-card
    @extends .small-card

.argument.bp3-card
  @extends .small-card

ul.routes li
  margin-bottom 1em
  a
    text-decoration none
    &:hover
      background-color: $blue5

.collapse-panel div.panel-header
  background-color $light-gray4
  //border 1px solid $light-gray1
  padding 6px
  border-radius 6px
  display flex
  flex-direction row
  margin-top 1em
  margin-bottom 0.5em
  align-items baseline
  &>*
    margin-right 1em
    &:last-child
      margin-right 0
  h1,h2,h3
    color $dark-gray4
    margin-top 0
    margin-bottom 0
  div.expander
    flex-grow 1
