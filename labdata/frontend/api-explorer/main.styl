*
  box-sizing: border-box

#container
  max-width 60em
  margin 0 auto 2em

blue5=#48AFF0

.usage
  position relative
  .toggle-json
    position absolute
    right 0
    top 0
    z-index 20

.small-card
  padding 10px
  h4,h5
    margin-top 0
    margin-bottom 0.2em
  p
    margin-bottom 0.2em

ul.arguments, ul.routes
  list-style: none
  padding-left 0
  li
    margin-bottom 0.5em
  .bp3-card
    @extends .small-card

.argument.bp3-card
  @extends .small-card

ul.routes li
  margin-bottom 1em
  a
    text-decoration none
    &:hover
      background-color: blue5

.collapse-panel div.panel-header
  display flex
  flex-direction row
  margin-right -1em
  margin-top 1em
  margin-bottom 0.5em
  &>*
    margin-right 1em
  h1,h2,h3
    margin-top 0
    margin-bottom 0
  div.expander
    flex-grow 1
