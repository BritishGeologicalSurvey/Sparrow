@import "../shared/colors.styl"

.bp3-navbar
  margin-top 2em

.project
  margin-bottom 2em
  &>h3:first-child
    margin-top 0

a.publication
  text-decoration none

.doi-info
  display inline-block
  font-weight 600
  color $dark-gray5
  .label
    font-size 0.8em
    text-transform uppercase
    &:after
      content: " "


div.samples
  display: table

  div.sample
    display: table-row
    &>span
      display table-cell
    span.name
      font-weight 600
      min-width 50px
      display inline-block
    span.material
      font-style italic

a.link-button
  margin-right 0.2em

.data-view
  margin 1em 0.2em

accent=$red3

div#sessions
  div.session.bp3-card
    position relative
    &:first-child
      margin-top 1em
    padding 10px
    margin-bottom 1em
    h4.date
      margin-top 0
      margin-bottom 5px
      margin-left 10px
      color: accent
      font-weight 400
      font-style italic
    div.session-info
      display flex
      flex-flow row wrap
      margin -5px
      .sample-id
        font-weight bold
        color: accent
      .target
        font-style italic
        color $gray1
      &>div
        min-width 130px
        background-color $light-gray5
        border-radius 5px
        margin 5px
        padding 5px 10px
        flex 1
        h5
          margin-top 0
          margin-bottom 0.2em
          &.small-info
            color: $gray1
            font-weight 400

