*
  box-sizing: border-box

page_margin=2em

body
  margin 0
  padding 0

#container
  max-width 60em
  margin 0 auto

@import './colors'

h1.site-title
  span.subtitle, span.inner
    display: inline-block
    margin-left 0.5em
  span.subtitle
    color: $dark-gray5
  span.subpage
    color: $gray1

nav.site-nav ul
  display flex
  flex-direction row
  margin 0.5em 0 1em
  list-style none
  padding-left 0
  li
    a
      font-size 1.2em
    margin-right 1em
