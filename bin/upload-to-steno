#!/usr/bin/env zsh

docker save dist_web | bzip2 > ~/Desktop/dist_web.bz2

docker run --rm --volumes-from labdata-database busybox tar cv /data \
| bzip2 > ~/Desktop/data.bz2

scp ~/Desktop/dist_web.bz2 steno:wiscar-labdata
scp ~/Desktop/data.bz2 steno:wiscar-labdata

