#!/bin/bash

indb_conn="$(sparrow config database)"
outdb='sparrow_test'
outdb_conn="postgresql://postgres@db/$outdb"
createdb -Upostgres -h db "$outdb" > /dev/null
SPARROW_DATABASE="$outdb_conn" sparrow init > /dev/null

migra "$indb_conn" "$outdb_conn" --unsafe
dropdb -Upostgres -h db "$outdb" > /dev/null
